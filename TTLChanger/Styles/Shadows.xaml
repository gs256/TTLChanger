<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TTLChanger">

    <DropShadowEffect  x:Key="DropShadowRight" Opacity="0.2" BlurRadius="10" ShadowDepth="2" Direction="0" Color="Black"/>
    <DropShadowEffect  x:Key="DropShadowDown" Opacity="0.2" BlurRadius="10" ShadowDepth="2" Direction="270" Color="Black"/>

    <Style x:Key="InnerShadow" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>